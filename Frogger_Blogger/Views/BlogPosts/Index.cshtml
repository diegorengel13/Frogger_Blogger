<!--================ Post Slider Area =================-->
<section class="post_slider_area">
    <div class="post_slider_inner owl-carousel">
       

        @foreach (var item in Model)
        {
            if (item.MediaUrl != null)
            {
                
             
            <div class="item">
                <div class="post_s_item">
                    <div class="imgsize">

                        <img src="@Html.DisplayFor(modelItem => item.MediaUrl)" alt="">
                    </div>
                    <div class="post_text">
                        <a class="cat" href="#">Gadgets</a>
                        <a href="@Url.Action("Details", "BlogPosts", new { Slug = item.Slug })"><h4>@Html.DisplayFor(modelItem => item.Title)</h4></a>
                        <p>@Html.DisplayFor(modelItem => item.Abstract)</p>
                        <div class="date">
                            <a href="#"><i class="fa fa-calendar" aria-hidden="true"></i>@Html.DisplayFor(modelItem => item.Created)</a>
                            <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            }
        }

    </div>
</section>
<br />
<!--================End Post Slider Area =================-->
